    margin: 0;
}

Container#slurm-config-container CheckBox {
    background: black;
    margin: 0;
}

Container#slurm-config-container SelectionList {
    width: 50vw;
    background: black;
    margin: 0;
}

Button#submit {
    width: auto;
    text-align: center;
    align: center middle;
    border: solid white;
}

Container#home-container {
    layout: vertical;
    width: 100vw;
    align: center top;
    padding: 0;
    border: solid white;
    background: #202020;
    overflow-y: scroll;
}

Static.welcome-message {
    align: center top;
    text-align: center;
    color: #22af4b;
    margin: 1;
}

Container#job-table-container {
    width: 100%;
